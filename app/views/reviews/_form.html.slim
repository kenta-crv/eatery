 = form_for([@current_eatery, @review], html: { multipart: true }) do |f|

   table.company
     tbody
      tr
        th.arrow_box
           | 美味しさ
        td
           = f.select :delicious_score, Review.ScoreNumbers
           | 点
        th.arrow_box
           | ムード
        td
           = f.select :mood_score, Review.ScoreNumbers
           | 点
        th.arrow_box
           | CP
        td
           = f.select :cost_performance_score, Review.ScoreNumbers
           | 点
        th.arrow_box
           | サービス
        td
           = f.select :service_score, Review.ScoreNumbers
           | 点
      tr
        th.arrow_box
           | 創造性
        td
           = f.select :imagination_score, Review.ScoreNumbers
           | 点
        th.arrow_box
           = f.select(:original1,[\
           ["",""],\
           ["旅行","旅行"],\
           ["デート","デート"],\
           ["お酒","お酒"],
           ["素材","素材"],
           ["独創性","独創性"],
          ])
        td
           = f.select :original1_score, Review.ScoreNumbers
           | 点
        th.arrow_box
           = f.select(:original1,[\
           ["",""],\
           ["旅行","旅行"],\
           ["デート","デート"],\
           ["お酒","お酒"],
           ["素材","素材"],
           ["独創性","独創性"],
          ])
        td
           = f.select :original2_score, Review.ScoreNumbers
           | 点
        th.arrow_box
           | 総合点
        td
           | 点

   table.company
     tbody
      tr
        th.arrow_box 訪問日
        td = f.date_field :visited
        th.arrow_box 再訪問したいですか？
        td = f.check_box :revisit
        th.arrow_box 平均単価
        td
          = f.select(:average_price,[\
          ["選択してください","選択してください"],\
          ["~￥999","~￥999"],\
          ["￥1000~￥1999","￥1000~￥1999"],\
          ["￥2000~￥2999","￥2000~￥2999"],\
          ["￥3000~￥4999","￥3000~￥4999"],\
          ["￥5000~￥7999","￥5000~￥7999"],\
          ["￥8000~￥9999","￥8000~￥9999"],\
          ["￥10000~￥14999","￥10000~￥14999"],\
          ["￥15000~￥19999","￥15000~￥19999"],\
          ["￥20000~￥29999","￥20000~￥29999"],\
          ["￥30000~￥39999","￥30000~￥39999"],\
          ["￥40000~","￥40000~"],\
         ])


   table.company
     tbody
      tr
        th.arrow_box タイトル
      tr
        td = text_field :review, :title, class:"title"
      tr
        th.arrow_box カテゴリー選択
      tr
        /td = f.select(:choice, review.Choicelists)
      tr
        th.arrow_box  キーワード
      tr
        td = text_field :review, :keyword, class:"keyword"
      tr
        th.arrow_box  完結分（100文字以内）
      tr
        td = text_area :review, :description, class:"description"
      tr
        th.arrow_box 本文
      tr
        td = text_area :review, :body, id:"example"
   table.company
     tbody
      tr
        th.arrow_box
          | メイン画像
        td
          = f.file_field :image_1.to_s
      tr
        th.arrow_box
          | サブ画像
        td
         = f.file_field :image_2.to_s, multiple: true
      tr
       th 公開
       td
        = f.select :status, Review.statuses.keys.map { |k| [t("enums.review.status.#{k}"),k]}
      tr.center
        td[colspan="2"] = f.submit '投稿する'

