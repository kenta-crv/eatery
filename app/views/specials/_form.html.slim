= form_for @special do |f|

   table.company
     tbody
      tr
        th.arrow_box タイトル
      tr
        td colspan="2" = text_field :special, :title, class:"title"
      tr
        th.arrow_box ファイル添付
      tr
        td  = f.file_field :file
      tr
        th.arrow_box カテゴリー選択
      tr
        /td = f.select(:choice, special.Choicelists)
      tr
        th.arrow_box  キーワード
      tr
        td = text_field :special, :keyword, class:"keyword"
      tr
        th.arrow_box  完結分（100文字以内）
      tr
        td = text_area :special, :description, class:"description"
      tr
        th.arrow_box 本文
      tr
        td = text_area :special, :body, id:"example"
      tr
        td = f.submit '投稿する'

script
  | var editor = new FroalaEditor('#example')
